<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#CDC4C4"
        android:gravity="center"
        android:padding="10sp"
        android:text="FORM"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="324dp"
        android:layout_height="57dp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:drawableLeft="@mipmap/person1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Firstname" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="323dp"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:drawableLeft="@mipmap/person1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Lastname" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="324dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:drawableLeft="@mipmap/email"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Email" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="324dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:drawableLeft="@mipmap/phone"
        android:ems="10"
        android:inputType="phone"
        android:text="Phone" />

    <RelativeLayout
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:background="#E6DBDB">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="199dp"
            android:layout_height="42dp"

            android:gravity="center"
            android:text="choose your language"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="132dp"
            android:layout_height="43dp"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/textView2"
            android:gravity="left" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="373dp"
        android:layout_height="42dp"

        android:layout_gravity="center"
        android:background="#CDC4C4"
        android:gravity="center"
        android:text="Courses"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="269dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="10sp" />


    <RelativeLayout
        android:layout_width="361dp"
        android:layout_height="145dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="data protection text:"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="308dp"
            android:layout_height="121dp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginTop="2dp"
            android:text="Regulation (EU) 2016/679 of the European Parliament and of the Council of 27 April 2016 on the protection of natural persons with regard to the processing of personal data and on the free movement of such data."
            android:textSize="13sp"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>